package client;

import java.net.InetAddress;

public class paquetUDP 
{
	final static public int FILEUPLOAD = 0;
	final static public int FILEDOWNLOAD = 1;

	private int type;
	private int seq=0;
	private int ack=0;
	private byte[]data = new byte[1024];
	private InetAddress servAdress;
	private int fin=0;
	private InetAddress destination; 		
	private int destinationPort;

	public paquetUDP(int type, InetAddress destination, int destinationPort) {
		this.type = type;
		this.destination=destination;
		this.destinationPort=destinationPort;
	}

	public int getSeq() {
		return seq;
	}
	
	public void setSeq(int seq) {
		this.seq = seq;
	}

	public int getAck() {
		return ack;
	}

	public void setAck(int ack) {
		this.ack = ack;
	}

	public int getFin() {
		return fin;
	}

	public void setFin(int fin) {
		this.fin = fin;
	}

	public byte[] getData() {
		return data;
	}

	public void setData(byte[] data) {
		this.data = data;
	}

	public int getType() {
		return type;
	}

	public void setType(int type) {
		this.type = type;
	}

	public InetAddress getDestination() {
		return destination;
	}
	
	public int getDestinationPort() {
		return destinationPort;
	}
	
	public void setDestinationPort(int destinationPort) {
		this.destinationPort = destinationPort;
	}
	
	public void setDestination(InetAddress destination) {
		this.destination = destination;
	}

	public String toString() {
        String output = "UDPPacket [type=" + type + ", seq=" + this.getSeq() + ", ack=" + this.getAck() + ", fin=" + this.getFin()
                        + ", destination=" + destination + ", destinationPort=" + destinationPort; 
        return output;	
}
}
